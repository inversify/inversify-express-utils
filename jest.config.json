{
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": [
    "html",
    "json",
    "text"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "setupFilesAfterEnv": [
    "<rootDir>/src/test/helpers/jest.setup.ts"
  ],
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "node_modules"
  ],
  "testRegex": ".test.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }
}